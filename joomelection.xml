<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2.0" method="upgrade">
	<name>JoomElection</name>
	<creationDate>21.04.2014</creationDate>
	<author>Antti Kekki</author>
	<authorEmail>antti.kekki@gmail.com</authorEmail>
	<authorUrl>http://code.google.com/p/joomelection/</authorUrl>
	<copyright>Antti Kekki</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<version>2.0.0</version>
	<description>JoomElection on Joomla! 3 komponentti jonka avulla voi järjestää vaaleja. 
	Komponentti tukee suoria ehdokasvaaleja ja avoimia listavaaleja.Tämä komponentti on julkaistu GPL 2 lisenssillä. 
	Se tarkoittaa että sitä voi käyttää vapaasti ja ilmaiseksi. Siihen saa tehdä muutoksia ja sitä saa levittää eteenpäin.
	</description>
  
	<install>
		<sql>
			<file charset="utf8" driver="mysql">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	
	<files folder="site">
		<filename>index.html</filename>
		<filename>joomelection.php</filename>
		<filename>controller.php</filename>
		<folder>css</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	
	<languages folder="site/language">
		<language tag="fi-FI">fi-FI/fi-FI.com_joomelection.ini</language>
	</languages>
	
	<administration>
		<menu>Vaalijärjestelmä</menu>
		<submenu>
      <menu task="election.showList">Vaalit</menu>
      <menu task="list.showList">Ehdokaslistat</menu>
      <menu task="option.showList">Ehdokkaat</menu>
      <menu task="voter.showList">Äänestäjät</menu>
    </submenu>
		
	  <languages folder="admin/language">
			<language tag="fi-FI">fi-FI/fi-FI.com_joomelection.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_joomelection.ini</language>
		</languages>
	
		<files folder="admin">
			<filename>index.html</filename>
			<filename>joomelection.php</filename>
			<filename>controller.php</filename>
			
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>models</folder>
			<folder>views</folder>
			<folder>controllers</folder>
			
			<filename>importExample/test_user_import.csv</filename>
		</files>		
	</administration>
</extension>
